<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row">
    <h4>Forecast for <%= @destination.name %>:</h4>
    <div class="weather">
      <p id="date">
      Date: <%= @weather.date %>
      </p>
      <p id="current-temp">
      Current Temperature: <%= @weather.current_temp %>° Fahrenheit
      </p>
      <p id="high-temp">
      High Temperature: <%= @weather.high_temp %>° Fahrenheit
      </p>
      <p id="low-temp">
      Low Temperature: <%= @weather.low_temp %>° Fahrenheit
      </p>
      <p id="description">
      Summary: <%= @weather.description %>
      </p>
      <p id="weather-image">
      <!%= image_tag("#{@image.url}", :alt => "Weather Image") %>
      </p>
    </div>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
